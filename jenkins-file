pipeline {
    agent any

    stages {
         stage('build') {
      agent{    
          docker {
              image 'node:18-alpine'
              reuseNode true // this is by default is false.
          } 
      }      
      steps {
          sh '''
           ls -la
           node --version 
           npm --version
           npm ci 
           npm run build
           ls -la  
          '''
          
      }
    }
    }
}
