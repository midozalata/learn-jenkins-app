pipeline {
    agent any

    stages {
         stage('build') {
      agent{    
          docker {
              image 'node:18-alpine'
              reuseNode true // this is by default is false.
          } 
      }      
      steps {
          sh '''
           pwd
           pwd
           ls -la
           node --version 
           npm --version
           npm ci 
           npm run build
           ls -la  
          '''
          
      }
    }
         stage('test'){
             steps{
                 echo 'test stage'
                 sh '''
                    pwd
                    test -f build/index.html
        `           npm test
                 '''
             }
         }
    }
}
